---
import Section from "@/components/Section.astro"

import data from "@cv"
const { skills } = data;
---
<Section title="Skills">
    <ul>
        {
            skills.map(({name}) => {
                return (
                <li>
                    <span>
                        {name}
                    </span>
                </li>
                )
            }) 
        }
    </ul>
</Section>
<style>
    ul{
        display: inline-flex;
        gap: 8px;
    }
    li {
        border-radius: 6px;
        background: #eee ;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>